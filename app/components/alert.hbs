<div
  class="flex p-3
    {{if (eq this.type 'info') 'bg-blue-100 border-blue-300'}}
    {{if (eq this.type 'success') 'bg-green-100 border-green-300'}}
    border rounded shadow-sm"
  ...attributes
>
  <div class="mr-3 mt-0.5">
    {{svg-jar
      "information-circle"
      class=(concat "w-6 fill-current " (if (eq this.type "info") " text-blue-400 ") (if (eq this.type "success") " text-green-400 "))
    }}
  </div>
  <div
    class="prose leading-7 text-sm max-w-none
      {{if (eq this.type 'info') 'text-blue-900 prose-blue'}}
      {{if (eq this.type 'success') 'text-green-800'}}
      "
  >
    {{yield}}
  </div>
</div>