<div class="rounded-lg border border-gray-300 shadow bg-white overflow-hidden transition-all group hover:shadow-lg">
  {{#if (eq @image "private-leaderboard")}}
    <img
      src="/assets/images/team-features/private-leaderboard.png"
      alt="Feature description"
      class="filter brightness-100 group-hover:brightness-102 transition-all"
    />
  {{else if (eq @image "slack-integration")}}
    <img
      src="/assets/images/team-features/slack-integration.png"
      alt="Feature description"
      class="filter brightness-100 group-hover:brightness-102 transition-all"
    />
  {{else if (eq @image "team-billing")}}
    <img
      src="/assets/images/team-features/team-billing.png"
      alt="Feature description"
      class="filter brightness-100 group-hover:brightness-102 transition-all"
    />
  {{/if}}

  <div class="p-4 border-t border-gray-200 group-hover:border-gray-300 transition-colors">
    <div class="text-gray-700 font-semibold mb-2 transition-colors">
      {{@title}}
    </div>
    <div class="text-gray-500 text-xs leading-5">
      {{@description}}
    </div>
  </div>
</div>