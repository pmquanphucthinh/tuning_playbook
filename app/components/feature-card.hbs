{{! @glint-nocheck: not typesafe yet }}
<div class="rounded-lg border border-gray-300 shadow bg-white overflow-hidden transition-all group hover:shadow-lg">
  <img src={{@imageUrl}} alt={{@title}} class="filter brightness-100 group-hover:brightness-102 transition-all" />

  <div class="p-4 border-t border-gray-200 group-hover:border-gray-300 transition-colors">
    <div class="text-gray-700 font-semibold mb-2 transition-colors">
      {{@title}}
    </div>
    <div class="text-gray-500 text-xs leading-5">
      <div class="flex flex-col gap-3">
        {{#each @description as |description|}}
          <p>{{description}}</p>
        {{/each}}
      </div>
      {{#if @pricing}}
        <ul class="pt-2">
          {{#each @pricing as |pricing|}}
            <li class="list-disc ml-4">
              <span class="font-bold">{{pricing.amount}}</span> ({{pricing.plan}})
            </li>
          {{/each}}
        </ul>
      {{/if}}
    </div>
  </div>
</div>