<div
  class="bg-gray-800 p-4 text-white font-mono text-xs leading-relaxed rounded max-h-[400px] overflow-y-auto"
  {{did-insert this.handleDidInsert}}
  ...attributes
>
  {{#if this.evaluation}}
    {{#each this.logLines key="@index" as |logLine index|}}
      <div class="flex items-start">
        <div class="text-gray-500 w-4 text-right mr-3 flex-shrink-0 select-none">{{add index 1}}</div>
        <div>{{html-safe logLine}}</div>
      </div>
    {{/each}}
  {{else}}
    <div>Hmm, we weren't able to find any logs for this submission.</div>
    <div>Please contact us at hello@codecrafters.io if this error persists.</div>
  {{/if}}
</div>