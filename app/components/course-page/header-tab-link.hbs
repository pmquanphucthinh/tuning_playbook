<LinkTo
  @route={{@route}}
  @models={{@models}}
  class="flex flex-shrink-0 items-center px-2 py-2 mr-2 border-b-2 text-sm group
    {{if @isActive 'border-teal-500' 'border-transparent hover:border-gray-200'}}"
  data-test-header-tab-link
  ...attributes
>
  {{#if @iconUrl}}
    <img src={{@iconUrl}} alt="icon" class="h-5 mr-2" />
  {{else if @icon}}
    {{svg-jar @icon class=(concat (if @isActive "text-gray-600" "text-gray-400 group-hover:text-gray-500") " w-5 mr-2 fill-current")}}
  {{/if}}

  <span class="whitespace-nowrap {{if @isActive 'text-gray-700' 'text-gray-600'}}">{{@text}}</span>

  {{#if @authorDetails}}
    <div class="ml-2 flex -space-x-3 hover:space-x-1 items-center">
      {{! @glint-expect-error: not typesafe yet }}}
      <ContributorAvatar @contributorDetails={{@authorDetails}} @contributorType="author" />

      {{! @glint-expect-error: not typesafe yet }}}
      {{#each @reviewersDetails as |reviewerDetails|}}
        {{! @glint-expect-error: not typesafe yet }}}
        <ContributorAvatar @contributorDetails={{reviewerDetails}} @contributorType="reviewer" />
      {{/each}}
    </div>
  {{else}}
    {{! alignment fix }}
    <div class="h-6">
    </div>
  {{/if}}
</LinkTo>