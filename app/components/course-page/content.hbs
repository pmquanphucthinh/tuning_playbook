<CoursePage::Header
  @course={{@course}}
  @repositories={{@repositories}}
  @activeRepository={{@activeRepository}}
  @onPublishToGithubButtonClick={{this.handlePublishToGithubButtonClick}}
/>

<div class="flex">
  <CoursePage::StepList
    @class="flex-grow min-w-0"
    @course={{@course}}
    @repository={{@activeRepository}}
    @onViewCommentsButtonClick={{this.handleViewCommentsButtonClick}}
    @onViewSolutionButtonClick={{this.handleViewSolutionButtonClick}}
    @onViewSourceWalkthroughButtonClick={{this.handleViewSourceWalkthroughButtonClick}}
    @onPublishToGithubButtonClick={{this.handlePublishToGithubButtonClick}}
    @onRepositoryCreate={{@onRepositoryCreate}}
    @preferredLanguageSlug={{@preferredLanguageSlug}}
  />

  <div class="w-80 flex-shrink-0 border-l ml-4 hidden lg:block">
    <CourseLeaderboard @course={{@course}} @activeRepository={{@activeRepository}} @repositories={{@repositories}} />

    {{#if this.visiblePrivateLeaderboardFeatureSuggestion}}
      <PrivateLeaderboardFeatureSuggestion @featureSuggestion={{this.visiblePrivateLeaderboardFeatureSuggestion}} class="ml-4 mt-6" />
    {{/if}}
  </div>
</div>

{{#if (and this.currentCourseStageForSolutionModal this.courseStageSolutionModalIntent)}}
  <ModalBackdrop>
    <CoursePage::CourseStageSolutionModal
      @courseStage={{this.currentCourseStageForSolutionModal}}
      @repositoryLanguage={{@activeRepository.language}}
      @onClose={{this.handleModalClose}}
      @intent={{this.courseStageSolutionModalIntent}}
    />
  </ModalBackdrop>
{{/if}}

{{#if this.isConfiguringGithubIntegration}}
  <ModalBackdrop>
    <CoursePage::ConfigureGithubIntegrationModal @repository={{@activeRepository}} @onClose={{this.handleModalClose}} />
  </ModalBackdrop>
{{/if}}