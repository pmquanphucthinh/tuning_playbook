<div class="flex">
  <CoursePage::StepList
    @class="flex-grow min-w-0"
    @course={{@course}}
    @repository={{@activeRepository}}
    @onViewSolutionButtonClick={{this.handleViewSolutionButtonClick}}
    @onViewSourceWalkthroughButtonClick={{this.handleViewSourceWalkthroughButtonClick}}
    @onRepositoryCreate={{@onRepositoryCreate}}
    @preferredLanguageSlug={{@preferredLanguageSlug}}
  />

  <div class="w-80 flex-shrink-0 border-l ml-4 hidden lg:block">
    <CourseLeaderboard @course={{@course}} @activeRepository={{@activeRepository}} @repositories={{@repositories}} />

    {{#if this.visiblePrivateLeaderboardFeatureSuggestion}}
      <PrivateLeaderboardFeatureSuggestion @featureSuggestion={{this.visiblePrivateLeaderboardFeatureSuggestion}} class="ml-4 mt-6" />
    {{/if}}
  </div>
</div>

{{#if this.isViewingCourseStageSolution}}
  <ModalBackdrop>
    <CoursePage::CourseStageSolutionModal
      @courseStage={{this.currentCourseStageForSolution}}
      @repositoryLanguage={{@activeRepository.language}}
      @onClose={{this.handleCourseStageSolutionModalClose}}
    />
  </ModalBackdrop>
{{/if}}

{{#if this.isViewingCourseStageSourceWalkthrough}}
  <ModalBackdrop>
    <CoursePage::CourseStageSourceWalkthroughModal
      @courseStage={{this.currentCourseStageForSourceWalkthrough}}
      @onClose={{this.handleCourseStageSourceWalkthroughModalClose}}
    />
  </ModalBackdrop>
{{/if}}