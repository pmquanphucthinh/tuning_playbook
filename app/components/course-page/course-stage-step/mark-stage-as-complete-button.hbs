<PrimaryButtonWithSpinner
  @shouldShowSpinner={{this.isCreatingStageCompletion}}
  @isDisabled={{this.isDisabled}}
  {{on "click" this.handleCreateStageCompletionButtonClick}}
  data-test-mark-stage-as-complete-button
>
  <div class="flex items-center gap-2">
    {{svg-jar "check-circle" class="w-6 h-6"}}
    <span>Mark stage as complete</span>
  </div>

  {{#if this.isDisabled}}
    <EmberTooltip @text="Your last submission needs to be submitted via Git before you can mark this stage as complete." />
  {{/if}}
</PrimaryButtonWithSpinner>