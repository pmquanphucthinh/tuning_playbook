{{#if this.anyButtonIsVisible}}
  <div class="flex flex-wrap" ...attributes>
    {{#if this.shouldShowCodeExamplesButton}}
      <CoursePage::CourseStageStep::YourTaskCard::ActionButton
        @text="View Code Examples"
        @icon="code"
        {{on "click" this.handleViewCodeExamplesButtonClicked}}
        class="mt-3 mr-3"
      />
    {{/if}}

    {{#if this.shouldShowViewScreencastsButton}}
      <CoursePage::CourseStageStep::YourTaskCard::ActionButton @text="Screencasts" @icon="play" {{on "click" (noop)}} class="mt-3 mr-3" />
    {{/if}}

    {{#if this.shouldShowViewTestCasesButton}}
      <CoursePage::CourseStageStep::YourTaskCard::ActionButton
        @text="Test Cases"
        @icon="check-circle"
        {{on "click" this.handleViewTestCasesButtonClicked}}
        class="mt-3 mr-3"
      />
    {{/if}}

    {{#if this.shouldShowSubmitFeedbackButton}}
      <CoursePage::CourseStageStep::YourTaskCard::ActionButton
        @text="Feedback"
        @icon="chat"
        {{on "click" @onFeedbackButtonClick}}
        class="mt-3 mr-3"
      />
    {{else if this.shouldShowEditFeedbackButton}}
      <CoursePage::CourseStageStep::YourTaskCard::ActionButton @text="Edit Feedback" @icon="chat" {{on "click" (noop)}} class="mt-3 mr-3" />
    {{/if}}
  </div>
{{/if}}