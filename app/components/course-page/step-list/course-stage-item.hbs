<div
  class="bg-gray-100 rounded-md shadow-sm {{@class}}"
  {{did-insert this.handleDidInsert}}
  {{will-destroy this.handleWillDestroy}}
  data-test-stage-item>
  <div class="bg-white rounded-t border border-b-0 border-gray-300 relative">
    <div class="p-8 pb-6">
      <div class="flex items-center mb-6">
        <span class="text-2xl text-gray-700 mr-3">{{@courseStage.name}}</span>

        {{#if this.isComplete}}
          <span class="bg-teal-600 text-white rounded px-2 py-1 font-bold text-sm" data-test-status-text>COMPLETE</span>
        {{else}}
          <span class="bg-yellow-500 text-white rounded px-2 py-1 font-bold text-sm" data-test-status-text>IN PROGRESS</span>
        {{/if}}
      </div>

      <div class="text-gray-700 leading-7 prose" data-test-stage-instructions>
        {{this.instructionsHTML}}
      </div>
    </div>
  </div>

  <div class="border border-gray-300 border-t rounded-b relative" data-test-stage-item-footer>
    <div class="h-px w-full bg-gray-200 bg-opacity-50 absolute -top-px"></div>

    <div class="flex items-center justify-between px-8 py-3">
      <div class="flex items-center">
        <StaticDot @class="mr-3" @color="gray" />
        <span class="text-gray-600 text-sm" data-test-footer-text>Select a language to proceed</span>
      </div>

      {{#if @willBeReplaced}}
        {{svg-jar "spinner" class="w-4 h-4 text-teal-600"}}
      {{/if}}
    </div>
  </div>
</div>