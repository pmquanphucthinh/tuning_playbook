<button
  type="button"
  class="group flex justify-between items-center px-3 py-2 border {{if this.shouldShowLanguageSelectionDropdown "border-teal-500" "border-gray-200"}} mr-3 mb-3 hover:border-teal-500"
  {{on "click" this.handleButtonClick}}>
  <div class="flex items-center mr-2">
    {{#if this.shouldShowLanguageSelectionDropdown}}
      {{svg-jar "code" class="text-teal-500 h-4 fill-current"}}
    {{else}}
      {{svg-jar "code" class="text-gray-400 h-4 fill-current group-hover:text-teal-500"}}
    {{/if}}
  </div>

  <div class="text-base {{if this.shouldShowLanguageSelectionDropdown "text-teal-500" "text-gray-700"}} group-hover:text-teal-500">
    Request Other
  </div>
</button>

{{#if this.shouldShowLanguageSelectionDropdown}}
  <PowerSelectMultiple
    @searchEnabled={{true}}
    @options={{array 1 2 3}}
    @selected={{array 1}}
    @onChange={{this.handleButtonClick}}
    @placeholder="Select some names..." as |name|>
    {{name}}
  </PowerSelectMultiple>
{{/if}}