<div
  class="border rounded flex items-center p-4 border-gray-800 hover:border-[#3F3F3F] bg-gradient-to-br from-[#383838] to-black from-0% to-100%"
  data-test-earned-badge-notice
  ...attributes
>
  {{svg-jar "gold-badge-icon" class="w-7 h-7 mr-3 flex-shrink-0"}}

  <div class="text-gray-100 text-sm leading-relaxed">
    You earned the
    {{#each @badgeAwards as |badgeAward|}}
      <LinkTo @route="badges" class="font-semibold underline">{{badgeAward.badge.name}}</LinkTo>
    {{/each}}
    badge.
  </div>
</div>