<BasicDropdown @horizontalPosition="right" @registerAPI={{@onDropdownInsert}} as |dd|>
  <dd.Trigger>
    <div data-test-course-stage-item-more-dropdown-trigger>
      {{svg-jar "dots-horizontal" class=(concat "w-5 fill-current " (if dd.isOpen "text-teal-500" "text-gray-300 hover:text-gray-400"))}}
    </div>
  </dd.Trigger>
  <dd.Content>
    <div class="py-2 border rounded shadow text-sm text-gray-600 max-w-xl bg-white" data-test-course-stage-item-more-dropdown-content>
      <div
        class="px-3 py-2 hover:bg-gray-50 flex items-center justify-between group"
        aria-disabled="true"
        role="button"
        {{on "click" (fn this.handleViewSolutionLinkClicked dd.actions)}}
      >
        <div class="mr-8">
          <span class="{{if this.viewSolutionLinkIsEnabled 'text-gray-700' 'text-gray-500'}}">
            View Solution
          </span>
        </div>

        {{#if this.viewSolutionLinkIsEnabled}}
          {{svg-jar "code" class=(concat "w-5 fill-current text-gray-300 group-hover:text-teal-500")}}
        {{else}}
          <span class="bg-gray-400 text-white px-2 py-1 rounded font-bold uppercase text-xs">
            Soon
          </span>
        {{/if}}
      </div>
    </div>
  </dd.Content>
</BasicDropdown>