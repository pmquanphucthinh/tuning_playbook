<div class="bg-gray-100 rounded-md shadow-sm {{@class}}" data-test-setup-item>
  <div class="p-8 pb-6 bg-white rounded-t border border-b-0 border-gray-300">
    <div class="mb-6 flex items-center">
      <span class="text-2xl text-gray-700 mr-3">Setup</span>
      <span class="bg-yellow-500 text-white rounded px-2 py-1 font-bold text-sm" data-test-status-text>IN PROGRESS</span>
    </div>

    {{#if this.createdRepository}}
      <CoursePage::StepList::SetupItem::CloneRepositoryStep
          @repository={{this.createdRepository}} />
    {{else}}
      <CoursePage::StepList::SetupItem::CreateRepositoryStep
          @course={{@course}}
          @onLanguageSelection={{this.handleLanguageSelection}} />
    {{/if}}
  </div>

  <div class="border border-gray-300 border-t rounded-b relative">
    <div class="h-px w-full bg-gray-200 bg-opacity-50 absolute -top-px"></div>

    <div class="px-8 py-3 flex items-center">
      {{#if (or this.isCreatingRepository this.createdRepository)}}
        <BlinkingDot @class="mr-3" @color="yellow" />
        <span class="text-gray-600 text-sm">Listening for a git push...</span>
      {{else}}
        <StaticDot @class="mr-3" @color="gray" />
        <span class="text-gray-600 text-sm">Select a language to proceed</span>
      {{/if}}
    </div>
  </div>
</div>