<div
  class="flex items-center justify-between relative py-3 group/test-results-bar-bottom-section"
  {{on "click" (if this.barIsCollapsed @onExpandButtonClick @onCollapseButtonClick)}}
  role="button"
  ...attributes
>
  <div class="inline-flex items-center text-xs font-semibold text-gray-500">
    {{#if (eq @activeStep.type "CourseStageStep")}}
      {{#each this.activeStepAsCourseStageStep.breadcrumbs as |breadcrumb index|}}
        {{#if (eq index 0)}}
          {{breadcrumb}}
        {{else}}
          <span class="text-gray-300 px-2 inline-flex">&gt;</span>
          {{breadcrumb}}
        {{/if}}
      {{/each}}
    {{else}}
      <span class="text-gray-500">{{@activeStep.title}}</span>
    {{/if}}
  </div>

  <CoursePage::StepProgressIndicator @step={{@activeStep}} />

  <div class="absolute left-0 right-0 top-0 bottom-0 flex items-stretch justify-center">
    {{#if this.barIsCollapsed}}
      <div
        class="text-gray-600 font-semibold inline-flex items-center transform group-hover/test-results-bar-bottom-section:translate-y-[-3px] group-hover/test-results-bar-bottom-section:text-gray-400 transition-all"
      >
        {{svg-jar "chevron-double-up" class="w-3 h-3 fill-current"}}
      </div>
    {{else}}
      <div
        class="px-6 text-gray-600 font-semibold inline-flex items-center transform group-hover/test-results-bar-bottom-section:translate-y-[-3px] group-hover/test-results-bar-bottom-section:text-gray-400 transition-all"
        role="button"
      >
        {{svg-jar "chevron-double-down" class="w-3 h-3 fill-current"}}
      </div>
    {{/if}}
  </div>
</div>