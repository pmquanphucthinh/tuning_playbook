<div class="text-gray-700 prose mb-5" data-test-create-repository-step>
  <p>
    <b>Which language would you like to use?</b>
    We'll create a Git repository with starter code for you to work on.
  </p>
</div>

<div>
  <div class="flex items-center flex-wrap max-w-3xl">
    {{#if @repository.language}}
      <div class="flex gap-x-3">
        <CoursePage::IntroductionStep::PreChallengeAssessmentCard::LanguageButton @language={{@repository.language}} @isSelected={{true}} />

        <TertiaryLinkButton @isDisabled={{@repository.isNew}} @route="course.introduction" @models={{array @repository.course.slug}} @query={{hash repo="new" track=null}}>
          Change language
        </TertiaryLinkButton>
      </div>
    {{else}}
      {{#if (and (gt this.preferredLanguages.length 0) (not this.shouldShowNonPreferredLanguages))}}
        {{#each this.preferredLanguages as |language|}}
          <CoursePage::IntroductionStep::PreChallengeAssessmentCard::LanguageButton
            class="mr-3 mb-3"
            @language={{language}}
            {{on "click" (fn this.handleLanguageButtonClick language)}}
          />
        {{/each}}

        <CoursePage::IntroductionStep::PreChallengeAssessmentCard::ShowOtherLanguagesButton
          @course={{@repository.course}}
          @user={{@repository.user}}
          {{on "click" this.handleShowOtherLanguagesButtonClick}}
        />
      {{else}}
        {{#each this.orderedLanguageConfigurations as |languageConfiguration|}}
          <CoursePage::IntroductionStep::PreChallengeAssessmentCard::LanguageButton
            class="mr-3 mb-3"
            @language={{languageConfiguration.language}}
            @releaseStatusIsAlpha={{languageConfiguration.releaseStatusIsAlpha}}
            {{on "click" (fn this.handleLanguageButtonClick languageConfiguration.language)}}
          />
        {{/each}}

        <CoursePage::IntroductionStep::PreChallengeAssessmentCard::RequestLanguageButton @course={{@repository.course}} @user={{@repository.user}} />
      {{/if}}
    {{/if}}
  </div>

  <AnimatedContainer>
    {{#animated-if (gt this.requestedAndUnsupportedLanguages.length 0) use=this.requestedLanguagesPromptTransition}}
      <CoursePage::IntroductionStep::PreChallengeAssessmentCard::RequestedLanguagesPrompt
        @requestedAndUnsupportedLanguages={{this.requestedAndUnsupportedLanguages}}
      />
    {{/animated-if}}
  </AnimatedContainer>
</div>