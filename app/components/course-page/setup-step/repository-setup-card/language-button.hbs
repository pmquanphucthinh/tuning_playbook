{{! @glint-nocheck: not typesafe yet }}
<TertiaryButton class="mr-3 mb-3 group" ...attributes>
  <div class="flex items-center">
    <div class="flex items-center mr-2">
      <img src={{@language.grayLogoUrl}} alt={{@language.name}} class="h-6 block group-hover:hidden" />
      <img src={{@language.tealLogoUrl}} alt={{@language.name}} class="h-6 hidden group-hover:block" />
    </div>

    <div class="text-base text-gray-700 group-hover:text-teal-500 font-semibold">
      {{@language.name}}
    </div>

    {{#if @releaseStatusIsAlpha}}
      <div class="text-xs text-gray-500 ml-2">
        (Alpha)
      </div>
    {{/if}}
  </div>
</TertiaryButton>