<CoursePage::InstructionsCard ...attributes data-test-base-stages-completed-card>
  <:header>
    <div class="flex items-center mb-6 border-b pb-2">
      <img src={{this.congratulationsImage}} alt="Congratulations!" class="mr-3 w-10 h-10" />
      <span class="font-semibold text-lg text-gray-700">Base Stages Complete!</span>
    </div>
  </:header>

  <:content>
    <div class="text-gray-700 leading-7 prose" data-test-instructions-text>
      <p>
        Nice work! You&apos;ve completed all the base stages for this challenge.
      </p>

      <p>
        From here on, you can customize the order in which you want to complete the remaining stages.
      </p>
    </div>

    <PrimaryButton data-test-configure-extensions-button class="mt-4" {{on "click" (fn (mut this.configureExtensionsModalIsOpen) true)}}>
      Choose Extensions
    </PrimaryButton>
  </:content>
</CoursePage::InstructionsCard>

{{#if this.configureExtensionsModalIsOpen}}
  <ModalBackdrop>
    {{! @glint-expect-error mut signature doesn't agree? }}
    <CoursePage::ConfigureExtensionsModal @repository={{@repository}} @onClose={{fn (mut this.configureExtensionsModalIsOpen) false}} />
  </ModalBackdrop>
{{/if}}