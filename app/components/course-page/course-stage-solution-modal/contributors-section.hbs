<div class="flex gap-6 flex-wrap" ...attributes>
  {{#if @solution.authorDetails}}
    <div class="flex-shrink-0">
      <div class="flex items-center gap-x-1 mb-2">
        <div class="text-gray-400 uppercase text-xs font-bold tracking-wider">
          Author
        </div>

        {{svg-jar "pencil-alt" class="w-5 fill-current text-gray-300"}}
      </div>

      <ExternalContributorCard @contributorDetails={{@solution.authorDetails}} />
    </div>
  {{/if}}

  {{#if @solution.reviewersDetails.firstObject}}
    <div class="flex-shrink-0">
      <div class="flex items-center gap-x-1 mb-2">
        <div class="text-gray-400 uppercase text-xs font-bold tracking-wider">
          {{#if (gt @solution.reviewersDetails.length 1)}}
            Reviewers
          {{else}}
            Reviewer
          {{/if}}
        </div>

        {{svg-jar "badge-check" class="w-5 fill-current text-teal-500"}}
      </div>

      {{#each @solution.reviewersDetails as |reviewerDetails|}}
        <ExternalContributorCard @contributorDetails={{reviewerDetails}} />
      {{/each}}
    </div>
  {{/if}}
</div>