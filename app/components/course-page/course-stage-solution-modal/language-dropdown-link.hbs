<div
  class="flex justify-between items-center py-2 px-4 group hover:bg-gray-50 cursor-pointer"
  role="button"
  data-test-language-link
  {{on "click" @onClick}}
>
  <div class="flex items-center mr-8">
    <span class="{{if @isSelected 'font-bold'}} {{if @isEnabled 'text-gray-700' 'text-gray-300'}}">{{@language.name}}</span>
  </div>
  <div>
    {{#if @isSelected}}
      {{svg-jar "check-circle" class="w-4 fill-current text-teal-500"}}
    {{else}}
      {{#if @isEnabled}}
        <img src={{@language.grayLogoUrl}} alt={{@repository.language.name}} class="w-4 h-4 block group-hover:hidden" />
        <img src={{@language.tealLogoUrl}} alt={{@repository.language.name}} class="w-4 h-4 hidden group-hover:block" />
      {{else}}
        <img src={{@language.grayLogoUrl}} alt={{@repository.language.name}} class="w-4 h-4 opacity-75" />
      {{/if}}
    {{/if}}
  </div>
</div>