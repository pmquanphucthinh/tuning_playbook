<div class="pb-8">
  <div
    class="leading-7 prose solution-explanation max-w-none"
    {{did-insert this.handleDidInsertExplanationHTML}}
    {{did-update this.handleDidUpdateExplanationHTML this.explanationHTML}}
  >
    {{this.explanationHTML}}
  </div>
</div>

{{#if @solution.hasContributorDetails}}
  <hr class="mb-6" />
  <div class="p-4 rounded border inline-block">
    <div role="button" class="mb-4 inline-flex items-center text-gray-500 hover:text-teal-500" {{on "click" @onViewDiffButtonClick}}>
      <span class="text-sm font-bold">View the code diff</span>
      {{svg-jar "arrow-right" class="w-3 h-3 ml-1 fill-current"}}
    </div>
    <CoursePage::CourseStageSolutionModal::ContributorsSection @solution={{@solution}} />
  </div>
{{/if}}