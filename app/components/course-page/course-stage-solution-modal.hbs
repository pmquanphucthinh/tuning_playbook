<ModalBody
  @allowManualClose={{true}}
  @onClose={{@onClose}}
  @isWide={{true}}
  @class="w-full"
  {{did-insert this.handleDidInsertModalBody}}
  data-test-course-stage-solution-modal
>
  <CoursePage::CourseStageSolutionModal::Header
    @currentSolution={{this.solution}}
    @activeTab={{this.activeTab}}
    @onTabLinkClick={{this.handleTabLinkClick}}
    @onRequestedSolutionLanguageChange={{this.handleRequestedSolutionLanguageChange}}
    @requestedSolutionLanguage={{this.requestedSolutionLanguage}}
    @onDidInsertLanguageDropdown={{this.handleDidInsertLanguageDropdown}}
    @courseStage={{this.courseStage}}
    @onPreviousStageButtonClick={{this.handlePreviousStageButtonClick}}
    @onNextStageButtonClick={{this.handleNextStageButtonClick}}
  />

  {{#if (eq this.activeTab "verified_solution")}}
    <CoursePage::CourseStageSolutionModal::VerifiedSolutionTab
      @courseStage={{this.courseStage}}
      @requestedSolutionLanguage={{this.requestedSolutionLanguage}}
      @repository={{@repository}}
      @solution={{this.solution}}
      @onViewVerifiedSolutionInOtherLanguagesButtonClick={{this.handleViewVerifiedSolutionInOtherLanguagesButtonClick}}
      @onViewCommentsButtonClick={{this.handleViewCommentsButtonClick}}
    />
  {{else if (eq this.activeTab "community_solutions")}}
    <CoursePage::CourseStageSolutionModal::CommunitySolutionsTab
      @courseStage={{this.courseStage}}
      @requestedSolutionLanguage={{this.requestedSolutionLanguage}}
      @repository={{@repository}}
      @onViewCommunitySolutionsInOtherLanguagesButtonClick={{this.handleViewCommunitySolutionsInOtherLanguagesButtonClick}}
      @onViewCommentsButtonClick={{this.handleViewCommentsButtonClick}}
      @onPublishToGithubButtonClick={{@onPublishToGithubButtonClick}}
    />
  {{else if (eq this.activeTab "source_walkthrough")}}
    <CodeWalkthrough @model={{this.courseStage.sourceWalkthrough}} />
  {{else if (eq this.activeTab "comments")}}
    <CoursePage::CourseStageSolutionModal::CommentsTab @courseStage={{this.courseStage}} @language={{@repository.language}} />
  {{/if}}
</ModalBody>