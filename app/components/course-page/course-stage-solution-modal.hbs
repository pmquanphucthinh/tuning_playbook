<ModalBody
  @allowManualClose={{true}}
  @onClose={{@onClose}}
  @isWide={{true}}
  @class="w-full"
  {{did-insert this.handleDidInsertModalBody}}
  data-test-course-stage-solution-modal
>
  {{! header }}

  {{#if (eq this.activeTab "verified_solution")}}
    {{! verified solution tab }}
  {{else if (eq this.activeTab "community_solutions")}}
    <CoursePage::CourseStageSolutionModal::CommunitySolutionsTab
      @courseStage={{this.courseStage}}
      @requestedSolutionLanguage={{this.requestedSolutionLanguage}}
      @repository={{@repository}}
      @onViewCommunitySolutionsInOtherLanguagesButtonClick={{this.handleViewCommunitySolutionsInOtherLanguagesButtonClick}}
      @onPublishToGithubButtonClick={{@onPublishToGithubButtonClick}}
    />
  {{else if (eq this.activeTab "comments")}}
    {{!-- <CoursePage::CourseStageSolutionModal::CommentsTab @courseStage={{this.courseStage}} @language={{@repository.language}} /> --}}
  {{else if (eq this.activeTab "screencasts")}}
    <CoursePage::CourseStageSolutionModal::ScreencastsTab @courseStage={{this.courseStage}} @language={{@repository.language}} />
  {{/if}}
</ModalBody>