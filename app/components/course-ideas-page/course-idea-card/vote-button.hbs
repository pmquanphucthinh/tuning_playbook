<button
  type="button"
  class="pr-2.5 pl-2 py-1.5 rounded shadow-sm flex items-center border
    {{if this.userHasVoted 'border-teal-500 hover:border-teal-600' 'border-gray-300 hover:border-gray-400'}}
    transition-all duration-75 active:shadow active:border-teal-600"
  {{on "click" this.handleClick}}
  ...attributes
>
  {{svg-jar "chevron-up" class="w-5 mr-1 text-teal-500"}}

  <span class="text-sm {{if this.userHasVoted 'text-teal-500' 'text-gray-700'}} transition-all duration-75">
    <span class="font-semibold">{{@courseIdea.votes.length}}</span>
    votes
  </span>

  {{#if this.currentUserService.isAnonymous}}
    <EmberTooltip @text="Click to login via GitHub" />
  {{/if}}
</button>