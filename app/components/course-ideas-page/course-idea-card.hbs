<div
  class="group bg-white p-5 rounded-md shadow-sm flex flex-col justify-between border
    {{if (eq @courseIdea.name 'Build your own Regex Parser') 'border-gray-300'}}
    relative"
  data-test-course-idea-card
>
  {{! Text }}
  <div class="mb-4">
    <div class="flex items-start justify-between mb-3">
      <div
        class="{{if (eq @courseIdea.name 'Build your own Regex Parser') 'text-teal-500' 'text-gray-600'}} mr-2 font-bold text-xl tracking-tight"
        data-test-track-name
      >
        {{@courseIdea.name}}
      </div>
      {{#if (eq @courseIdea.name "Build your own Regex Parser")}}
        {{svg-jar "chevron-double-up" class="w-7 mt-0.5 fill-current text-teal-500"}}
      {{else if (eq @courseIdea.name "Build your own Shell")}}
        <div class="text-xs text-white font-semibold bg-teal-500 rounded px-1.5 py-1 ml-3 mt-0.5 flex items-center" data-test-track-beta-label>
          in progress
          {{svg-jar "shield-check" class="w-4 ml-1 fill-current"}}
        </div>
      {{else if (eq @courseIdea.name "Build your own SQLite")}}
        <div class="text-xs text-white font-semibold bg-teal-500 rounded px-1.5 py-1 ml-3 mt-0.5 flex items-center" data-test-track-beta-label>
          released
          {{svg-jar "check" class="w-4 ml-1 fill-current"}}
        </div>
      {{else if (eq @courseIdea.name "Build your own React")}}
        <div class="text-xs text-teal-500 font-semibold border border-teal-500 rounded px-1.5 py-1 ml-3 mt-0.5" data-test-track-beta-label>
          new
        </div>
      {{/if}}
    </div>
    <div class="prose prose-sm">
      {{@courseIdea.descriptionHtml}}
    </div>
  </div>

  {{! Footer Controls }}
  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <CourseIdeasPage::CourseIdeaCard::VoteButton @courseIdea={{@courseIdea}} class="mr-2" />
      <CourseIdeasPage::CourseIdeaCard::SupervoteButton @courseIdea={{@courseIdea}} />
    </div>
  </div>
</div>