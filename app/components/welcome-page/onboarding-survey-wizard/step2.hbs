<h2 class="font-bold text-gray-800 text-xl mb-8 border-b-2 inline-flex">
  Which of these have you used before?
</h2>

<div class="flex items-center flex-wrap gap-3 mb-6">
  <TertiaryButton class="pl-2">
    <div class="flex items-center">
      {{svg-jar "check" class="w-4 h-4 mr-1.5 text-gray-400"}}
      Redis
    </div>
  </TertiaryButton>
  {{! Example of a selected item }}
  <TertiaryButton class="pl-2 border-teal-500">
    <div class="flex items-center text-teal-500">
      {{svg-jar "check-circle" class="w-4 h-4 mr-1.5 text-teal-500"}}
      Git
    </div>
  </TertiaryButton>
  {{! Multiple items can be selected }}
  <TertiaryButton class="pl-2 border-teal-500">
    <div class="flex items-center text-teal-500">
      {{svg-jar "check-circle" class="w-4 h-4 mr-1.5 text-teal-500"}}
      SQLite
    </div>
  </TertiaryButton>
  <TertiaryButton class="pl-2">
    <div class="flex items-center">
      {{svg-jar "check" class="w-4 h-4 mr-1.5 text-gray-400"}}
      Docker
    </div>
  </TertiaryButton>
  <TertiaryButton class="pl-2">
    <div class="flex items-center">
      {{svg-jar "check" class="w-4 h-4 mr-1.5 text-gray-400"}}
      Bittorrent
    </div>
  </TertiaryButton>
  <TertiaryButton class="pl-2">
    <div class="flex items-center">
      {{svg-jar "check" class="w-4 h-4 mr-1.5 text-gray-400"}}
      Grep
    </div>
  </TertiaryButton>
</div>

<Textarea
  {{!-- @value={{null}} --}}
  class="text-sm rounded px-3 py-2 placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-teal-500 border border-gray-300 shadow-sm mb-4"
  placeholder="Used something similar?"
  rows="3"
  cols="80"
  id="concept_description"
  required
  {{autoresize "abcd"}}
/>

<PrimaryButton {{on "click" @onContinueButtonClick}}>
  Continue
</PrimaryButton>