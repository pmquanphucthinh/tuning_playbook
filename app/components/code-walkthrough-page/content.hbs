<div class="bg-white">
  <div class="container mx-auto lg:max-w-screen-lg px-3 md:px-6">
    <div class="flex flex-col-reverse md:flex-row">
      <div class="md:pr-8 pt-10 pb-20 w-full min-w-0">
        <CodeWalkthrough @model={{@codeWalkthrough}} />

        {{#if @codeWalkthrough.hackerNewsUrl}}
          <div class="h-px border-t mb-6"></div>
          <DiscussOnHnButton @link="https://google.com" />
        {{/if}}
      </div>

      <div class="border-b md:border-b-0 md:border-l md:pl-8 flex-shrink-0 w-full md:w-64 py-6 md:py-10">
        <CodeWalkthroughPage::MetadataItem @icon="clock" class="mb-3">
          <span class="font-semibold">12 min</span>
          reading time
        </CodeWalkthroughPage::MetadataItem>
        <CodeWalkthroughPage::MetadataItem @icon="calendar">
          updated
          <span class="font-semibold">1 hour ago</span>
        </CodeWalkthroughPage::MetadataItem>

        {{#if @codeWalkthrough.hackerNewsUrl}}
          <div class="mt-6 hidden md:block">
            <DiscussOnHnButton @link="https://google.com" />
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>