<div class="flex flex-col w-full" ...attributes>
  <div class="flex items-center">
    <div class="w-full h-5 rounded-lg bg-gray-100 overflow-hidden">
      <div class="h-5 bg-teal-500 transition-[width]" style={{html-safe this.widthStyle}} data-test-concept-progress-bar></div>
    </div>

    <div class="flex-shrink-0 ml-3 text-gray-600 text-sm font-medium">
      <AnimatedContainer>
        {{#animated-value @latestConceptEngagement.currentProgressPercentage rules=this.rules duration=200 as |v|}}
          <div>
            {{! @glint-ignore }}
            {{v}}%
          </div>
        {{/animated-value}}
      </AnimatedContainer>
    </div>
  </div>

  {{#if (lt @latestConceptEngagement.currentProgressPercentage 100)}}
    <div class="flex-shrink-0 mt-2 text-gray-600 text-xs">
      <AnimatedContainer>
        {{#animated-value @latestConceptEngagement.remainingBlocksCount rules=this.rules duration=200 as |v|}}
          <div>
            {{! @glint-ignore }}
            <span class="font-medium">{{v}}</span>
            blocks left
          </div>
        {{/animated-value}}
      </AnimatedContainer>
    </div>
  {{/if}}
</div>