<div class="text-gray-800 font-bold text-lg mb-4">
  Community Solution
</div>

{{#if @submission.communityCourseStageSolution}}
  <CoursePage::CourseStageSolutionModal::CommunitySolutionCard
    @solution={{@submission.communityCourseStageSolution}}
    @isCollapsedByDefault={{true}}
  />
{{else}}
  <div class="bg-gray-800 p-4 text-white font-mono text-xs leading-relaxed rounded mb-4">
    This submission doesn't have a community stage solution yet.
  </div>
{{/if}}