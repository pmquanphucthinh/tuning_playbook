<div
  class="relative
    {{if (and @previousStepsAreComplete (not @isActive)) 'opacity-50'}}
    hover:opacity-100
    {{unless @previousStepsAreComplete 'cursor-not-allowed'}}"
  role="button"
  ...attributes
>
  <div
    class="h-4 w-4
      {{if @previousStepsAreComplete 'bg-teal-500' 'bg-gray-300'}}
      border-2
      {{if @previousStepsAreComplete 'border-teal-500' 'border-gray-300'}}
      rounded-full"
  >
  </div>

  <div class="absolute -left-20 -right-20 top-6 text-center uppercase font-semibold {{if @previousStepsAreComplete 'text-teal-500' 'text-gray-300'}}">
    {{@name}}
  </div>
</div>