<BaseButton
  @size={{@size}}
  @isDisabled={{@isDisabled}}
  class="transition-colors duration-75
    {{if @isDark 'bg-transparent' 'bg-white hover:bg-gray-50'}}
    {{if @isDark 'text-gray-200 hover:text-white' 'text-gray-800'}}
    {{if @isDark 'border-gray-300 hover:border-gray-200' 'border-gray-300'}}"
  ...attributes
>
  {{yield}}
</BaseButton>