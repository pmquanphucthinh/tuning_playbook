{{! @glint-nocheck: not typesafe yet }}
<button
  type="button"
  class="rounded shadow-sm font-semibold inline-block border transition-colors duration-75
    {{if @isDark 'bg-transparent' 'bg-gray-50 hover:bg-gray-100'}}
    {{if @isDark 'text-gray-200 hover:text-white' 'text-gray-600 hover:text-gray-700'}}
    {{if @isDark 'border-gray-300 hover:border-gray-200' 'border-gray-300'}}
    {{if (eq @size 'small') 'px-3 py-1.5' 'px-3 py-2'}}
    {{if (eq @size 'small') 'text-sm' 'text-base'}}
    {{if @isDisabled 'cursor-not-allowed opacity-50'}}"
  ...attributes
>
  {{yield}}
</button>