{{! @glint-nocheck: not typesafe yet }}
<button
  type="button"
  class="rounded shadow-sm font-semibold inline-block border border-gray-300 bg-gray-50 hover:bg-gray-100 transition-colors duration-75
    {{if (eq @size 'small') 'px-3 py-1.5' 'px-3 py-2'}}
    {{if (eq @size 'small') 'text-sm' 'text-base'}}
    text-gray-600 hover:text-gray-700
    {{if @isDisabled 'cursor-not-allowed opacity-50'}}"
  ...attributes
>
  {{yield}}
</button>