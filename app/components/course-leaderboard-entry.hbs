<LeaderboardEntry
  @isCollapsed={{@isCollapsed}}
  @route="user"
  @routeModel={{unless this.isSkeleton @entry.user.username}}
  @isForCurrentUser={{this.isForCurrentUser}}
  @user={{unless this.isSkeleton @entry.user}}
  @progressNumerator={{unless this.isSkeleton this.progressNumerator}}
  @progressDenominator={{unless this.isSkeleton this.progressDenominator}}
  @status={{unless this.isSkeleton @entry.status}}
>
  <:afterUsername>
    {{#if @shouldShowLanguageIconsWithoutHover}}
      <img
        alt="{{@entry.language.name}}"
        src={{@entry.language.tealLogoUrl}}
        class="w-4 h-4 mr-2 opacity-90 group-hover/leaderboard-entry:opacity-100 transition-all"
      />
    {{else}}
      <img alt="{{@entry.language.name}}" src={{@entry.language.tealLogoUrl}} class="w-4 h-4 mr-2 opacity-0 group-hover/leaderboard-entry:opacity-100 transition-all" />
    {{/if}}
  </:afterUsername>
</LeaderboardEntry>