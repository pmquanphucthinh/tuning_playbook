{{! @glint-nocheck: not typesafe yet }}
<div
  role="button"
  class="flex items-center gap-2 py-2
    {{if this.isUnselected 'hover:bg-gray-200'}}
    {{if this.isUnselectedAndCorrect 'bg-teal-100'}}
    {{if this.isSelectedAndUnsubmitted 'bg-gray-200'}}
    {{if this.isSelectedAndCorrect 'bg-teal-100'}}
    "
  ...attributes
>
  <div
    class="flex items-center justify-center rounded-full border-[0.5px] w-6 h-6 border-gray-600
      {{if this.isUnselected 'active:bg-gray-200'}}
      {{if (and this.isSubmitted this.isCorrect) 'border-teal-600 bg-teal-600'}}
      "
  >
    {{#if this.isSelectedAndUnsubmitted}}
      <div class="rounded-full w-3 h-3 bg-gray-800"></div>
    {{else if (and this.isSubmitted this.isCorrect)}}
      {{svg-jar "check" class="w-3 fill-current text-white"}}
    {{else if this.isSelectedAndWrong}}
      <div class="rounded-full w-3 h-3 bg-gray-400"></div>
    {{/if}}
  </div>
  <div class="text-gray-800">
    {{html-safe @option.html}}
  </div>
</div>