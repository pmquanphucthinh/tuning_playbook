<BaseLinkButton
  @route={{@route}}
  @models={{@models}}
  @model={{@model}}
  @size={{@size}}
  @query={{@query}}
  class="{{if @isDark 'bg-transparent' 'bg-white hover:bg-gray-50'}}
    {{if @isDark 'text-gray-200 hover:text-white' 'text-gray-900'}}
    {{if @isDark 'border-gray-300 hover:border-gray-200' 'border-gray-300'}}
    {{if @isDisabled 'cursor-not-allowed opacity-50'}}"
  ...attributes
>
  {{yield}}
</BaseLinkButton>