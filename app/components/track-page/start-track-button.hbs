<LinkTo
  @route="course"
  @model="redis"
  class="bg-teal-500 hover:bg-teal-600 transition-colors
    {{if (eq @size 'small') 'px-3 py-3 text-sm' 'px-4 py-3 text-lg'}}
    text-white font-bold rounded inline-flex items-center mr-2"
  data-test-start-track-button
>
  {{#if this.currentUserIsAnonymous}}
    {{svg-jar "github" class="fill-current w-5 transform transition-all mr-2"}}
  {{/if}}

  {{#if this.currentUserHasStartedTrack}}
    Resume Track
  {{else}}
    Start Track
  {{/if}}

  {{svg-jar "arrow-right" class="w-4 ml-2 fill-current"}}
</LinkTo>