<TrackPage::IntroductionAndCourses::TimelineItem
  @shouldShowLogoBackground={{true}}
  @logoImageUrl="/assets/images/logo/outline-color.svg"
  @logoImageAltText="CodeCrafters"
>
  <TrackPage::IntroductionCard @language={{@language}} @courses={{@courses}} @number="1" />
</TrackPage::IntroductionAndCourses::TimelineItem>

{{#each @courses as |course index|}}
  <TrackPage::IntroductionAndCourses::TimelineItem
    @shouldShowLogoBackground={{false}}
    @logoImageUrl={{course.logoUrl}}
    @logoImageAltText={{course.name}}
    @isLastItem={{eq (add index 1) @courses.length}}
  >
    <TrackPage::CourseCard @language={{@language}} @course={{course}} @number={{add index 2}} />
  </TrackPage::IntroductionAndCourses::TimelineItem>
{{/each}}