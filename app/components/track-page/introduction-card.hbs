<TrackPage::Card
  @title="Introduction & track overview"
  @recentParticipants={{this.recentParticipants}}
  @number={{@number}}
  @isComplete={{@isComplete}}
>
  <div class="leading-6 prose" {{markdown-to-html @language.trackIntroductionMarkdown}}>
  </div>

  <div class="mt-6">
    {{! template-lint-disable no-inline-styles no-forbidden-elements require-iframe-title }}
    <div style="padding:56.25% 0 0 0;position:relative;"><iframe
        src="https://player.vimeo.com/video/{{@language.trackIntroductionVideoId}}?h=6b9c6fef10&amp;badge=0&amp;autopause=0&amp;player_id=0&amp;app_id=58479"
        frameborder="0"
        allow="autoplay; fullscreen; picture-in-picture"
        allowfullscreen
        style="position:absolute;top:0;left:0;width:100%;height:100%;"
        title="CodeCrafters Go - Introduction"
      ></iframe></div>
  </div>

  {{#if @shouldShowStartTrackButton}}
    <TrackPage::StartTrackButton @size="small" @language={{@language}} @courses={{@courses}} class="mt-4" />
  {{/if}}
</TrackPage::Card>