<TrackPage::Card @title="Introduction & track overview" @recentParticipants={{this.recentParticipants}} @number={{@number}}>
  <div class="leading-6 prose mb-6">
    {{this.introductionHtml}}
  </div>

  <div class="mb-4">
    {{! template-lint-disable no-inline-styles no-forbidden-elements require-iframe-title }}
    <div style="padding:56.25% 0 0 0;position:relative;"><iframe
        src="https://player.vimeo.com/video/{{@language.trackIntroductionVideoId}}?h=fb6c876ae4&title=0&byline=0&portrait=0"
        style="position:absolute;top:0;left:0;width:100%;height:100%;"
        title="Introduction & track overview"
        frameborder="0"
        allow="autoplay; fullscreen; picture-in-picture"
        allowfullscreen
      ></iframe></div><script src="https://player.vimeo.com/api/player.js"></script>
  </div>

  <TrackPage::StartTrackButton @size="small" @language={{@language}} @courses={{@courses}} />
</TrackPage::Card>