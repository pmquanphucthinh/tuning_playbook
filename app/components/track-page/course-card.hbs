<div class="bg-white rounded-md shadow-sm border border-gray-200 relative w-full" ...attributes>
  <div class="p-4 md:p-6">
    <div class="text-xl font-bold text-gray-700 mb-4">
      {{@course.name}}
    </div>

    <div class="leading-7 prose mb-4">
      {{this.introductionHtml}}
    </div>

    {{#each @course.stages as |stage|}}
      <TrackPage::CourseCard::StageListItem @language={{@language}} @stage={{stage}} />
    {{/each}}
  </div>
</div>