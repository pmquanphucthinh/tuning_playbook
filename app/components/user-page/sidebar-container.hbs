<div ...attributes>
  <img alt="avatar" src={{@user.avatarUrl}} class="border-2 border-white shadow rounded w-56 h-56 mb-6" />

  <div class="font-bold text-2xl text-gray-600">
    {{@user.name}}
  </div>

  <a class="group inline-flex items-center text-gray-400 mb-6" href={{@user.githubProfileUrl}}>
    <div class="text-lg group-hover:underline">
      {{@user.username}}
    </div>

    {{svg-jar "github" class="fill-current w-5 ml-2 group-hover:text-gray-500"}}
  </a>

  <div class="text-xs text-gray-400">
    joined
    {{moment-from-now @user.createdAt}}
  </div>
</div>