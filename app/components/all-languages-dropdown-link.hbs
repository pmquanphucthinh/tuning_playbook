<div
  class="flex justify-between items-center py-2 px-4 group hover:bg-gray-50 cursor-pointer"
  role="button"
  data-test-language-link
  {{on "click" @onClick}}
>
  <div class="flex items-center mr-8">
    <span class="{{if @isSelected 'font-semibold'}} text-gray-600">
      All Languages
    </span>
  </div>
  <div>
    {{#if @isSelected}}
      {{svg-jar "check-circle" class="w-4 fill-current text-teal-500"}}
    {{else}}
      {{svg-jar "code" class="w-4 fill-current text-gray-500 block group-hover:hidden"}}
      {{svg-jar "code" class="w-4 fill-current text-teal-500 hidden group-hover:block"}}
    {{/if}}
  </div>
</div>