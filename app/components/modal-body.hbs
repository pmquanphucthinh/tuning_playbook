<div
  class="bg-white rounded-md shadow-sm border-gray-300 relative flex flex-col py-6 sm:py-12 min-h-0 {{@class}}"
  {{on-click-outside this.handleClickOutside}}
  ...attributes
>
  {{#if @allowManualClose}}
    <button
      class="absolute right-6 top-6 sm:right-12 sm:top-12 opacity-60 hover:opacity-100"
      type="button"
      {{on "click" this.handleCloseButtonClick}}
      data-test-close-modal-button
    >
      {{svg-jar "x" class="w-5 h-5 text-gray-400"}}
    </button>
  {{/if}}

  <div class="flex-shrink-0 px-6 sm:py-12">
    {{yield to="header"}}
  </div>

  <div class="overflow-y-scroll flex-shrink px-6 sm:py-12">
    {{yield to="content"}}
  </div>
</div>