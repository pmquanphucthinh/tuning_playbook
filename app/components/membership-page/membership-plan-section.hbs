<MembershipPage::Section @title="Membership Plan" data-test-membership-plan-section>
  <div class="text-gray-700" data-test-membership-plan-description>
    {{#if @subscription.isTrialing}}
      Your trial for the
      <b class="font-semibold">{{@subscription.pricingPlanName}}</b>
      plan is currently active.
    {{else if @subscription.isActive}}
      {{#if @subscription.cancelAt}}
        {{#if (and @subscription.hasVIPAccess @subscription.hasVIPExpiry)}}
          ðŸŽ‰ You have VIP access to all CodeCrafters content, valid until
          <b class="font-semibold">{{moment-format @subscription.cancelAt "LLL"}}</b>.
        {{else if @subscription.hasVIPAccess}}
          ðŸŽ‰ You have VIP access to all CodeCrafters content.
        {{else}}
          Your CodeCrafters membership is valid until
          <b class="font-semibold">{{moment-format @subscription.cancelAt "LLL"}}</b>.
        {{/if}}
      {{else}}
        You are currently subscribed to the
        <b class="font-semibold">{{@subscription.pricingPlanName}}</b>
        plan.
      {{/if}}
    {{else if @subscription.isInactive}}
      Your CodeCrafters membership is
      <b class="text-red-600 font-semibold">currently inactive</b>.
    {{/if}}
  </div>
</MembershipPage::Section>