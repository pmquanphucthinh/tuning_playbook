<div class="py-4 overflow-x-scroll" ...attributes>
  <pre class="shiki github-light">{{!
    }}<code class="block diff-highlight min-w-fit">{{!
      }}{{#each this.lineGroupsForRender as |lineGroup|}}{{!
        }}{{#each lineGroup.lines as |line|}}{{!
          }}<div class="px-2 {{line.type}}-line-group min-w-fit"
            >{{!
            }}{{#if (eq line.type "added")}}{{!
                }}<span class="inserted-marker">+ </span>{{!
              }}{{else if (eq line.type "removed")}}{{!
                }}<span class="removed-marker">- </span>{{!
              }}{{else}}{{!
                }}<span class="unchanged-marker">  </span>{{!
              }}{{/if}}{{!
            }}{{line.html}}{{!
          }}</div>{{!
        }}{{/each}}{{!
      }}{{/each}}{{!
    }}</code>{{!
}}</pre>
</div>