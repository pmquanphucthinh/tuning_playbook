<div class="dark:bg-gray-950 rounded-md border dark:border-gray-800" ...attributes>
  <div class="p-4 pt-3 sm:p-6 sm:pt-5">
    <h2 class="font-semibold border-b dark:border-gray-800 pb-2 mb-5 text-lg dark:text-teal-400">Prize</h2>

    <div class="prose prose-sm dark:prose-invert max-w-none">
      {{markdown-to-html @contest.prizeDetailsMarkdown}}
    </div>

    <div class="flex text-gray-200 mt-4">
      <LinkTo
        @route="contest"
        @model={{this.previousContest.slug}}
        class="flex items-center rounded-l-md border border-r-[0.5px] border-gray-800 hover:border-gray-700 hover:bg-gray-900 pl-2 pr-2 py-1 {{if this.isPreviousContestDisabled 'cursor-not-allowed pointer-events-none opacity-50'}}"
        data-test-prize-previous-contest-button
      >
        Prev. contest
      </LinkTo>

      <LinkTo
        @route="contest"
        @model={{this.nextContest.slug}}
        class="flex items-center rounded-r-md border border-l-[0.5px] border-gray-800 hover:border-gray-700 hover:bg-gray-900 pr-2 pl-2 py-1 {{if this.isNextContestDisabled 'cursor-not-allowed pointer-events-none opacity-50'}}"
        data-test-prize-next-contest-button
      >
        Next contest
      </LinkTo>
    </div>
  </div>
</div>