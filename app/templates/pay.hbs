{{page-title "Pay"}}

<div class="container mx-auto lg:max-w-screen-lg py-16 px-3 md:px-6">
  <div class="flex flex-col items-center justify-center">
    <h1 class="text-2xl font-bold text-gray-700 md:text-3xl max-w-md text-center">
      Unlock the full CodeCrafters experience
    </h1>

    {{#if this.userIsEligibleForEarlyBirdDiscount}}
      <PayPage::EarlyBirdDiscountNotice @expiresAt={{this.earlyBirdDiscountEligibilityExpiresAt}} class="mt-8" />
    {{/if}}

    <div class="flex flex-col-reverse md:flex-row gap-x-12 gap-y-8 items-center mt-8">
      <PayPage::PricingCard @title="Monthly" @actualPrice={{79}} @subtitle="All-access for one month" @pricingFrequency="monthly" />

      <PayPage::PricingCard
        @title="Annual"
        @subtitle="Learn at your own pace"
        @highlightedText="Ideal for expensing"
        @actualPrice={{790}}
        @discountedPrice={{if this.userIsEligibleForEarlyBirdDiscount 395 null}}
        @pricingFrequency="yearly"
        @earlyBirdDiscountEnabled={{this.userIsEligibleForEarlyBirdDiscount}}
      />
    </div>

    <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-4 max-w-2xl">
      {{#each this.testimonials as |testimonial|}}
        <CourseOverviewPage::TestimonialListItem @testimonial={{testimonial}} />
      {{/each}}
    </div>

    <div role="button" class="mt-8 text-sm text-gray-400 hover:underline" {{on "click" this.handleTryNowPayLaterButtonClicked}}>
      Try now, pay later â†’
    </div>
  </div>
</div>