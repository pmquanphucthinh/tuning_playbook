{{page-title "Settings"}}

<div class="container mx-auto lg:max-w-screen-lg pt-10 pb-48 px-4 md:px-6">
  <div class="font-semibold text-xl text-gray-700 mb-4">Settings</div>

  <ul class="flex items-center overflow-x-scroll pb-4 md:pb-6">
    {{#each this.tabs as |tab|}}
      <LinkTo @route={{tab.route}}>
        <TabHeader @text={{tab.label}} @isActive={{eq this.activeTab.label tab.label}} />
      </LinkTo>
    {{/each}}
  </ul>

  <div class="bg-white rounded-md p-4 md:p-6 border">
    {{outlet}}
  </div>
</div>