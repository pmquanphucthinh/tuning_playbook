<div class="bg-white min-h-screen">
  <div class="container mx-auto pt-4 pb-10 px-6">
    <div class="pt-3 pb-6 border-b mb-6">
      <TertiaryLinkButton @route="course-admin.updates" @models={{array "redis"}} @size="small" class="pl-1.5 mb-3">
        <div class="flex items-center">
          {{svg-jar "arrow-circle-left" class="w-4 h-4 mr-1.5 text-gray-500"}}

          <span>
            Back
          </span>
        </div>
      </TertiaryLinkButton>

      <div class="flex items-start justify-between">
        <div>
          <h3 class="text-lg font-bold text-gray-800 mb-1">
            GraphQL API
          </h3>
          <div class="text-xs text-gray-400">
            Update course description
          </div>
          <div class="flex items-center mt-6 gap-x-3">
            <PrimaryButton @size="small">
              Apply Update
            </PrimaryButton>

            <TertiaryButton @size="small">
              Refresh from GitHub
            </TertiaryButton>
          </div>
        </div>
        <div class="flex flex-col items-end">
          <a href="https://github.com/" class="text-gray-400 flex items-center hover:text-gray-600">
            {{svg-jar "github" class="inline-flex w-4 mr-1 fill-current"}}
            <span class="text-xs underline font-medium">View diff</span>
          </a>
        </div>
      </div>
    </div>

    <FileContentsCard class="mb-4" @filename="course-definition.yml" @code="-abcd\\n+efgh" @language="yaml" />
  </div>
</div>