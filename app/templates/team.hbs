{{page-title "Manage Team"}}

<div class="container mx-auto lg:max-w-screen-lg pt-10 pb-48 px-6">
  <div class="flex justify-between flex-wrap">
    <div class="font-semibold text-2xl text-gray-700 mb-6 flex-shrink-0">Manage Team</div>
    <TeamPage::TeamSelectionDropdown @team={{this.model.team}} @allTeams={{this.model.allTeams}} class="flex-shrink-0 mb-6" />
  </div>

  <div class="flex gap-4 items-start flex-col md:flex-row">
    <div class="w-full md:w-1/3">
      {{#if this.model.team.hasActivePilot}}
        <TeamPage::PilotDetailsContainer @team={{this.model.team}} />
      {{else}}
        <TeamPage::SubscriptionSettingsContainer @team={{this.model.team}} />
      {{/if}}
      <TeamPage::SlackIntegrationSettingsContainer @team={{this.model.team}} class="mt-4" />
    </div>

    <TeamPage::MembersContainer @team={{this.model.team}} class="w-full md:w-2/3" />
  </div>
</div>